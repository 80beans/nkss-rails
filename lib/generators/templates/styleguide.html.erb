<%# This is the layout that the styleguide uses. %>
<%# The actual body is stored in `:body`, and Styleguide stylesheets %>
<%# are in `:head`. %>

<%# You may customize this by adding your own scripts and styles. %>

<!doctype html>
<html>
  <head>
    <meta charset='utf-8' />
    <title>Styleguides</title>
    <%= stylesheet_link_tag 'application' %>
    <!--[if lt IE 9]><script type='text/javascript' src='http://cdnjs.cloudflare.com/ajax/libs/html5shiv/3.6/html5shiv.min.js'></script> -->
    <%= yield(:head) if content_for?(:head) %>
  </head>
  <body>
    <%= yield(:body) if content_for?(:body) %>
  </body>
</html>
